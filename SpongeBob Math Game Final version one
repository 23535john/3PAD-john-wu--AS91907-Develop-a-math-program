        btn_container = tk.Frame(main_frame, bg='white', height=60)
        btn_container.pack(side='bottom', fill='x', pady=(0, 10))
        btn_container.pack_propagate(False)  # é˜²æ­¢å†…éƒ¨éƒ¨ä»¶æ”¹å˜å®¹å™¨å¤§å°
    
    # è¿”å›åœ°å›¾æŒ‰é’® - ä½¿ç”¨å›ºå®šå°ºå¯¸
        back_btn = tk.Button(
            btn_container, 
            text='â¬… Back to Map', 
            font=('Comic Sans MS', 14),
            bg='#3A6EA5',
            fg='white',
            padx=20,
            pady=10,
